<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rosu_judo"
    tools:context=".All_JudoBelts_classes.White_belt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        tools:ignore="ExtreText">


        <RelativeLayout
            android:id="@+id/RL_whiteBelt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="0dp"
            android:background="@color/crem"
            android:padding="15dp">

            <TextView
                android:id="@+id/WhiteBelt_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:drawableLeft="@drawable/ic_white_belt_80__1_"
                android:drawablePadding="50dp"
                android:text=""
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RL2_wHITEBelt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/crem"
            android:padding="15dp">

            <TextView
                android:id="@+id/White_belt_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:text="White belt (ROKU KYU)"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/Introduction_whiteBelt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/White_belt_text"
                android:text="Se acorda pentru stadiul de acomodare si presupune cunoasterea urmatoarelor tehnici din nage waza, cel putin la nivelul notei 7."
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/HonJudoText_whiteBelt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Introduction_whiteBelt"
                android:text="HON JUDO"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/HonJudoDetails_whiteBelt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/HonJudoText_whiteBelt"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:text="- Salutul\n- Judogi\n- Obi\n- Shintai\n- Shisei\n- Ukemi\n- Kuzushi\n- Hon kumi kata"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/NageWazaText_whiteBelt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/HonJudoDetails_whiteBelt"
                android:text="NAGE WAZA"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/NageWazaDetails_whiteBelt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/NageWazaText_whiteBelt"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:text="- De ashi barai\n- Uki goshi"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/NeWazaText_whiteBelt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/NageWazaDetails_whiteBelt"
                android:text="NE WAZA"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/NeWazaDetails_whiteBelt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/NeWazaText_whiteBelt"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:text="- Osae komi waza\n- Hon kesa gatame\n- Kuzure kesa gatame\n- Kashira gatame"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/federatiaJudo_whiteBelt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/NeWazaDetails_whiteBelt"
                android:layout_marginTop="0dp"
                android:text="(!) Consultati site ul oficial al federatiei romane de judo pentru mai multe detalii despre aceste tehnici sau adresati-va antrenorului (!)"
                android:textColor="@color/red"
                android:textSize="12dp"
                android:textStyle="bold" />


        </RelativeLayout>


        app:layout_constraintTop_toBottomOf="@+id/GridLayout_belts" />
    </LinearLayout>
</RelativeLayout>

