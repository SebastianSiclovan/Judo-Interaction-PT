<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rosu_judo"
    tools:context=".All_JudoBelts_classes.Brown_belt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        tools:ignore="ExtreText">


        <RelativeLayout
            android:id="@+id/RL_brownBelt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="0dp"
            android:background="@color/crem"
            android:padding="15dp">

            <TextView
                android:id="@+id/brownBelt_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:drawableLeft="@drawable/ic_brown_belt_80__6_"
                android:drawablePadding="50dp"
                android:text=""
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RL2_brownBelt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/crem"
            android:padding="15dp">

            <TextView
                android:id="@+id/Brown_belt_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:text="Brown belt (ICHI KYU)"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/brown"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/Introduction_brownBelt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Brown_belt_text"
                android:text="Candidatul trebuie sa posede albastră şi cel puţin 18-24 luni de practică susţinută în judo la grupa de avansaţi sau de performanţă, condiţie fizică foarte bună, rezultate sportive la nivel naţional sau internaţional, comportament etic şi moral exemplar, cunoştinţe de bază de anatomie, de efortul sportiv, refacere, igienă etc"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/demonstrareText_brownBelt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Introduction_brownBelt"
                android:text="Demonstrarea ambilaterala din deplasarea a tehnicilor urmatoare:"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/demonstrareDetails_brownBelt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/demonstrareText_brownBelt"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:text="- Hane maki komi\n- O guruma\n- Ashi guruma\n- Sukui nage\n- Te guruma\n- Kata guruma\n- O soto guruma\n- Yoko wakare\n- Sumi otoshi\n- Yoko  tomoe nage\n- Uchi mata maki komi"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/federatiaJudo_brownBelt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/demonstrareDetails_brownBelt"
                android:layout_marginTop="0dp"
                android:text="(!) Consultati site ul oficial al federatiei romane de judo pentru mai multe detalii despre aceste tehnici sau adresati va antrenorului (!)"
                android:textColor="@color/red"
                android:textSize="12dp"
                android:textStyle="bold" />











        </RelativeLayout>


        app:layout_constraintTop_toBottomOf="@+id/GridLayout_belts" />
    </LinearLayout>
</RelativeLayout>

